<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 백그라운드 색상, 여기서는 흰색으로 설정 -->

    <!-- 그림자 효과, 여기서는 검은색 그림자 -->
    <item
            android:right="1dp"
            android:left="1dp"
            android:top="1dp"
            android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#50ffffff" /> <!-- 투명한 검은색 -->
            <corners android:radius="10dp" /> <!-- 둥근 모서리 설정 -->
        </shape>
    </item>
</layer-list>
